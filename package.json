{
    "name": "omotenashi-connect",
    "version": "0.1.0",
    "description": "Japan-ready hospitality booking backend (Omotenashi Connect)",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server.js",
        "migrate": "sequelize-cli db:migrate",
        "migrate:undo": "sequelize-cli db:migrate:undo",
        "seed": "sequelize-cli db:seed:all",
        "lint": "eslint .",
        "fmt": "prettier --write .",
        "tsc": "tsc -p tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.922.0",
        "bcrypt": "^5.1.1",
        "bullmq": "^5.7.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.13.1",
        "pg-hstore": "^2.3.4",
        "pino": "^9.4.0",
        "pino-http": "^10.3.0",
        "redis": "^4.6.14",
        "sequelize": "^6.37.7",
        "swagger-ui-express": "^5.0.1",
        "yaml": "^2.6.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^22.7.5",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "eslint": "^8.57.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "sequelize-cli": "^6.6.3",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}
