# Core
NODE_ENV=development
PORT=4000
TZ=Asia/Tokyo

# DB
DB_HOST=localhost
DB_PORT=5432
DB_NAME=omotenashi
DB_USER=postgres
DB_PASS=postgres

# JWT
JWT_ACCESS_SECRET=replace_me
JWT_REFRESH_SECRET=replace_me
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d
BCRYPT_ROUNDS=12

# Redis / Bull
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Storage (S3)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=omotenashi-media

# Payments
PAY_PROVIDER=payjp
PAYJP_SECRET=
STRIPE_SECRET=

# App Settings
MAX_UPLOAD_SIZE_MB=10
WEBHOOK_RETRY_MAX=5
ANALYTICS_SCHEDULE_CRON="0 2 * * *"
BOOKING_EXPIRY_MINUTES=30
