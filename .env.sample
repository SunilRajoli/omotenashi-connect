# Omotenashi Connect - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=4000
CORS_ORIGIN=*
APP_URL=http://localhost:4000

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=omotenashi
DB_USER=postgres
DB_PASS=postgres

# JWT Authentication
JWT_ACCESS_SECRET=your_access_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d
BCRYPT_ROUNDS=12

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# AWS S3 Storage (optional)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=omotenashi-media

# Payment Providers
PAY_PROVIDER=payjp
PAYJP_SECRET=
STRIPE_SECRET=

# Email (SendGrid)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@omotenashi-connect.com
FROM_NAME=Omotenashi Connect

# App Settings
MAX_UPLOAD_SIZE_MB=10
WEBHOOK_RETRY_MAX=5
ANALYTICS_SCHEDULE_CRON=0 2 * * *
BOOKING_EXPIRY_MINUTES=30
LOG_LEVEL=info
